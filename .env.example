# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your_account_id_here

# Cost Configuration (in USD)
COST_PER_1M_INPUT_TOKENS=3.00    # $3 per million input tokens
COST_PER_1M_OUTPUT_TOKENS=15.00  # $15 per million output tokens

# Claude Model Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=8192
CLAUDE_TEMPERATURE=0.3

# Chunking Configuration
MAX_CHUNK_SIZE=2000              # Maximum lines per chunk
CHUNK_OVERLAP=100                # Lines to overlap between chunks

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=50
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1            # seconds
RETRY_MAX_DELAY=60               # seconds

# Caching
ENABLE_CACHING=true
CACHE_TTL_HOURS=24
DYNAMODB_TABLE_NAME=code-doc-cache

# S3 Configuration
S3_BUCKET_NAME=intelligent-code-docs
S3_PREFIX=documentation/

# Monitoring
ENABLE_XRAY=false
LOG_LEVEL=INFO
ENABLE_COST_TRACKING=true

# Local Development
LOCAL_MODE=true
DEBUG=false
